<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render partial: "users/user_info", locals: { user: @review.user } %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2 class="mr-3"><%= @review.title %></h2>
          <div class="d-flex align-items-center">
            <%= attachment_image_tag @review, :review_image, fallback: "default-image.jpg", class:"img-fluid" %>
            <div class="ml-3">
              <p><%= @review.rate %></p>
              <p><%= @review.total_charge %> 万円</p>
              <p><%= @review.total_time %> 時間</p>
            </div>  
          </div>
          <div class="border p-3">
            <p><%= @review.body %></p>
          </div>
      </div>
    </div>
  </div>
</main>