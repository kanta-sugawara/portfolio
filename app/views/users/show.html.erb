<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render partial: "user_info", locals: { user: @user } %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2><%= "#{@user.name}さんのレビュー"%></h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>本文</th>
              <th>評価</th>
              <th colspan="4"></th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td>
                  <%= link_to user_path(review.user) do %>
                    <%= attachment_image_tag review, :review_image, :fill, 60, 60, fallback: "default-image.jpg", class:"card-img-top"; %>
                  <% end %>
                </td>
                <td><%= link_to review.title, review_path(review) %></td>
                <td><%= review.body %></td>
                <td><%= review.rate %>点</td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @reviews %>
      </div>
    </div>
  </div>
</main>