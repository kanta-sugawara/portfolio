<% if user == current_user %>
  <h4>マイプロフィール</h4>
<% else %>
 <h4>ユーザー情報</h4>
<% end %>

<table class='table'>
  <tr>
    <%= attachment_image_tag user, :profile_image, fallback: "default-image.jpg", size:'100x100' %>
    <th>フォロー</th>
    <td>
      <%= link_to follows_user_path(user) do %>
        <%= user.followers.count %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>フォロワー</th>
    <td>
      <%= link_to followers_user_path(user) do %>
        <%= user.followeds.count %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th><%= user.introduction %></th>
  </tr>

  <% if user != current_user %>
  <tr>
    <td>
      <% if current_user.following?(user) %>
        <%= link_to user_relationships_path(user.id), method: :delete, class: "btn btn-secondary btn-block" do %>
          <i class="fas fa-user-minus"></i> フォロー外す
        <% end %>
      <% else %>
        <%= link_to user_relationships_path(user.id), method: :post, class: "btn btn-primary btn-block" do %>
          <i class="fas fa-user-plus"></i> フォローする
        <% end %>
      <% end %>
    </td>
  </tr>
  <% end %>

  <% if current_user == user %>
   <tr>
    <td>
      <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(user) %>">
        <i class="fas fa-user">プロフィール編集</i>
      </a>
    </td>
  </tr>
  <% else %>
  <tr>
    <td>
      <a class="btn btn-outline-secondary btn-block" href="<%= user_path(user) %>">
        <i class="fas fa-user">ユーザーページ</i>
      </a>
    </td>
  </tr>
  <% end %>
  <tr>
    <td>
      <a class="btn btn-success btn-block" href="<%= new_review_path %>">
        <i class="fas fa-edit">レビューを書く</i>
      </a>
    </td>
  </tr>
  <tr>
    <td>
      <a class="btn btn-danger btn-block" href="<%= favorites_user_path(user)%>">
        <i class="fas fa-heart">いいね一覧</i>
    </td>
  </tr>
</table>
