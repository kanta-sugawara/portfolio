<h2>いいねしたレビュー</h2>
<table class="table">
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th>本文</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @favorite_reviews.each do |review| %>
        <tr>
          <td>
            <%= link_to user_path(review) do %>
              <%= attachment_image_tag review.user, :profile_image, fallback: "default-image.jpg", size:'100x100' %>
              <%= review.user.name %>
            <% end %>
          </td>
          <td><%= link_to review.title, review_path(review) %></td>
          <td><%= review.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>